{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The main content area on the homepage }}
<main class="content" role="main">

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article itemscope itemtype="http://schema.org/Article" class="{{post_class}}">

        <section class="post">
            <header class="post-header">
                {{! img class="post-avatar" alt="...'s avatar" src="..." height="48" width="48" }}
                <h2 itemprop="name" class="post-title"><a href="{{url}}">{{title}}</a></h2>
                <p class="post-meta"><time itemprop="datePublished" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD, YYYY"}}</time> {{#if tags}}on {{tags}}{{/if}}</span></p>
            </header>
            <div itemprop="description" class="post-description">
                <p>{{excerpt}}&hellip;</p>
            </div>
        </section>
    </article>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}

</main>
